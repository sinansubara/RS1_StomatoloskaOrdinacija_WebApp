@model StomatoloskaOrdinacija.Web.ViewModels.Profil.ProfilIzmjenaLozinkeViewModel
@{
    Layout = (string)TempData["Layout"];
    ViewBag.Title = "Stomatološka ordinacija | Izmjena lozinke";

    string successMessage = (string)TempData["successMessage"];
    string errorMessage = (string)TempData["errorMessage"];

}
<head>
    <link href="~/template/css/PregledProfila.css" rel="stylesheet">
</head>



<div class="container-fluid">
    <!-- Breadcrumbs-->
    <ol class="breadcrumb">
        <li class="breadcrumb-item">
            <a asp-controller="Profil" asp-action="Pocetna">Početna</a>
        </li>
        <li class="breadcrumb-item">
            <a asp-controller="Profil" asp-action="pregled-profila">Pregled profila</a>
        </li>
        <li class="breadcrumb-item active">Izmjena lozinke</li>
    </ol>
    @if (successMessage != null)
    {
        <div class="alert alert-info alert-prijavljen" data-alert="alert">
            <a class="close" style="cursor: pointer !important" data-dismiss="alert">&times;</a>
            <p class="text-center text-info">@successMessage</p>
        </div>
    }
    @if (errorMessage != null)
    {
        <div class="alert alert-danger alert-prijavljen" data-alert="alert">
            <a class="close" style="cursor: pointer !important" data-dismiss="alert">&times;</a>
            <p class="text-center text-danger">@errorMessage</p>
        </div>
    }
    <div class="container emp-profile">
        <form asp-action="izmjena-lozinke" asp-controller="Profil" method="POST">
            <div class="form-row">
                <div class="col-md-4">
                    <label>Stara lozinka</label>
                    <input name="staralozinka" asp-for="StaraLozinka" type="password" class="form-control" placeholder="Unesite staru lozinku">
                    <span asp-validation-for="StaraLozinka" class="text-danger"></span>
                </div>
                <div class="col-md-4">
                    <label>Nova lozinka</label>
                    <input name="novalozinka" asp-for="NovaLozinka" type="password" class="form-control" placeholder="Unesite novu lozinku">
                    <span asp-validation-for="NovaLozinka" class="text-danger"></span>
                </div>
                <div class="col-md-4">
                    <label>Potvrda nove lozinke</label>
                    <input name="potvrdanovelozinke" asp-for="PotvrdaNoveLozinke" type="password" class="form-control" placeholder="Unesite ponovo novu lozinku">
                    <span asp-validation-for="PotvrdaNoveLozinke" class="text-danger"></span>
                </div>
            </div>
            <div class="form-row">
                <div class="col-md-1"><input type="submit" class="btn btn-success" value="Snimi" style="cursor: pointer;margin: 10px;" /></div>
                <div class="col-md-1"><input type="reset" class="btn btn-primary" value="Poništi" style="cursor: pointer;margin: 10px;" /></div>
            </div>
        </form>
    </div>

</div>
